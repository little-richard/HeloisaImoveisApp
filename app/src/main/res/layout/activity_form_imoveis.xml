<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FormImoveisActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context=".activities.FormImoveisActivity">

            <EditText
                android:id="@+id/editText_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:ems="10"
                android:inputType="textLongMessage"/>

            <EditText
                android:id="@+id/editText_logradouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Logradouro"
                android:ems="10"
                android:inputType="textLongMessage"/>

            <EditText
                android:id="@+id/editText_quartos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de quartos"
                android:ems="10"
                android:inputType="number"/>

            <EditText
                android:id="@+id/editText_banheiros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de banheiros"
                android:ems="10"
                android:inputType="number"/>

            <EditText
                android:id="@+id/editText_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tamanho da área"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText_garagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de garagens"
                android:ems="10"
                android:inputType="number"/>

            <EditText
                android:id="@+id/editText_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor R$"
                android:ems="10"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/editText_iptu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor IPTU"
                android:ems="10"
                android:inputType="numberDecimal"/>
            <Button
                android:id="@+id/button_salvar"
                android:layout_height="100px"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="@string/button_salvar"/>
        </LinearLayout>

</android.support.constraint.ConstraintLayout>